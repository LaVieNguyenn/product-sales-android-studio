<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="14dp" android:background="@drawable/bg_green_circle">

    <TextView android:id="@+id/tvOrderId" android:textStyle="bold" android:textSize="16sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvOrderStatus" android:textColor="@color/black"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvOrderDate"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvOrderTotal" android:textStyle="bold"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
