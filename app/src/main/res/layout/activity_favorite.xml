<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:fitsSystemWindows="true">

    <!-- Toolbar -->
    <include layout="@layout/include_toolbar_favorite" />

    <!-- Thanh hiện khi chỉnh sửa: số lượng đã chọn + nút Bỏ thích -->
    <LinearLayout
        android:id="@+id/selectionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/checkboxAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã chọn 0/0"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btnRemoveSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bỏ thích"
            android:textColor="@android:color/holo_red_dark"
            android:backgroundTint="@android:color/white"
            android:background="@drawable/button_border_red"
            android:paddingHorizontal="16dp"/>
    </LinearLayout>

    <!-- Danh sách sản phẩm yêu thích -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFavorites"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="4dp"
        android:clipToPadding="false" />
</LinearLayout>
