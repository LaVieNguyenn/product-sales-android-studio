<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#004D40"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allora - Ứng dụng mua sắm tiện lợi trong tầm tay"
        android:textColor="#00FF99"
        android:textSize="17.5sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:gravity="center"/>

    <!-- Thanh tìm kiếm -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/rounded_white"
        android:paddingHorizontal="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:tint="#808080" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Tìm kiếm sản phẩm"
            android:background="@android:color/transparent"
            android:textColorHint="#808080"
            android:paddingStart="8dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Tìm kiếm"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#00B14F"
            android:paddingHorizontal="16dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Tiêu đề phụ -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tìm kiếm sản phẩm theo danh mục"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:gravity="center"/>

    <!-- Danh mục ngành nghề -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Category 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Kinh doanh"
                android:textColor="#004D40"
                android:background="@drawable/rounded_category"
                android:layout_marginEnd="8dp"
                android:textSize="14sp" />

            <!-- Category 2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Marketing"
                android:textColor="#004D40"
                android:background="@drawable/rounded_category"
                android:layout_marginEnd="8dp"
                android:textSize="14sp" />

            <!-- Category 3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Chăm sóc khách hàng"
                android:textColor="#004D40"
                android:background="@drawable/rounded_category"
                android:textSize="14sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Banner CTA -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        android:background="@drawable/rounded_banner" />
</LinearLayout>
